{
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "jest"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/*.test.js", "src/tests/**/*.js"] }
    ]
  },
  "env": {
    "node": true,
    "jest/globals": true
  }
}
